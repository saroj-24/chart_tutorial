<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161A30"
    android:columnCount="2"
    android:rowCount="2"
    android:layout_gravity="center"
    android:columnOrderPreserved="false"
    tools:context=".MainActivity">


  <androidx.cardview.widget.CardView
      android:id="@+id/piechartview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="8dp"
      app:cardMaxElevation="30dp"
      android:layout_marginStart="25dp"
      app:cardBackgroundColor="#424769"
      android:layout_marginTop="150dp"
      app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

      <ImageView
          android:id="@+id/pieimageView"
          android:layout_width="135dp"
          android:layout_height="120dp"
          android:layout_weight="1"
          android:src="@drawable/piechartss"/>

      <TextView
          android:id="@+id/pietextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Pie chart"
          android:layout_marginTop="11dp"
          android:textSize="18sp"
          android:textColor="@color/white"
          android:gravity="center"
          android:fontFamily="@font/quicksandmedium"
          android:textStyle="bold"/>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:id="@+id/linechartcardview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="8dp"
      app:cardMaxElevation="30dp"
      android:layout_marginStart="25dp"
      android:layout_marginEnd="50dp"
      app:cardBackgroundColor="#424769"
      android:layout_marginTop="150dp"
      app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

      <ImageView
          android:id="@+id/linechartimageView"
          android:layout_width="135dp"
          android:layout_height="120dp"
          android:layout_weight="1"
          android:src="@drawable/linechartss"/>

      <TextView
          android:id="@+id/linecharttextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Line chart"
          android:layout_marginTop="11dp"
          android:textSize="18sp"
          android:textColor="@color/white"
          android:gravity="center"
          android:fontFamily="@font/quicksandmedium"
          android:textStyle="bold"/>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:id="@+id/columnchartview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="8dp"
      app:cardMaxElevation="30dp"
      android:layout_marginStart="25dp"
      app:cardBackgroundColor="#424769"
      android:layout_marginTop="50dp"
      app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

      <ImageView
          android:id="@+id/columnchart_imageView"
          android:layout_width="135dp"
          android:layout_height="120dp"
          android:layout_weight="1"
          android:src="@drawable/columns"/>

      <TextView
          android:id="@+id/coulumntextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Column chart"
          android:layout_marginTop="11dp"
          android:textSize="18sp"
          android:textColor="@color/white"
          android:gravity="center"
          android:fontFamily="@font/quicksandmedium"
          android:textStyle="bold"/>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
  <androidx.cardview.widget.CardView
      android:id="@+id/radarchartview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="8dp"
      app:cardMaxElevation="30dp"
      android:layout_marginStart="25dp"
      android:layout_marginEnd="50dp"
      app:cardBackgroundColor="#424769"
      android:layout_marginTop="50dp"
      app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

      <ImageView
          android:id="@+id/radarchart_imageView"
          android:layout_width="135dp"
          android:layout_height="120dp"
          android:layout_weight="1"
          android:src="@drawable/charts"/>

      <TextView
          android:id="@+id/radartextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Box chart"
          android:layout_marginTop="11dp"
          android:textSize="18sp"
          android:textColor="@color/white"
          android:gravity="center"
          android:fontFamily="@font/quicksandmedium"
          android:textStyle="bold"/>
    </LinearLayout>


  </androidx.cardview.widget.CardView>








  </GridLayout>